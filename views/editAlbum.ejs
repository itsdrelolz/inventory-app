<h1>Edit Album</h1>
    <form action="/albums/edit/<%= album.id %>" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= album.title %>" required>
        </div>
        <div>
            <label for="artist-name">Artist:</label>
            <input type="text" id="artistName" name="artistName" value="<%= album.artistName %>" required>
        </div>
        <div>
            <label for="release_date">Release Date:</label>
            <input type="date" id="release_date" name="release_date" value="<%= album.release_date %>" required>
        </div>
        <div>
            <label for="picture_url">Picture URL:</label>
            <input type="url" id="picture_url" name="picture_url" value="<%= album.picture_url %>">
        </div>
        <button id="submit-btn" type="submit">Update Album</button>
    </form>
    <form action="/albums/delete/<%= album.id %>" method="POST">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this album?')">Delete Album</button>
    </form>