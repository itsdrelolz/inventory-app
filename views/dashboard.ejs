<div class="page-info">
    <h1>Welcome to the Inventory Dashboard</h1>
    <div class="create-options">
    <a href="/artists/create" id="submit-btn">Create Artist</a>
    <a href="/albums/create" id="submit-btn">Create Album</a>
</div>
</div>

<div class="page-content">
    <section class="dashboard-section">
        <h2>Recently Added Artists</h2>
        <% if (artists && artists.length > 0) { %>
            <div class="card-container">
                <% artists.forEach(artist => { %>
                    <div class="card">
                        <% if (artist.picture_url) { %>
                            <img class="card-image" src="<%= artist.picture_url %>" alt="<%= artist.name %>'s picture">
                        <% } else { %>
                            <div class="card-image placeholder">No Artist Picture</div>
                        <% } %>
                        <div class="card-content">
                            <h3 class="card-title"><%= artist.name %></h3>
                            
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="no-artists-message">
                <p>No artists are currently available.</p>
            </div>
        <% } %>
    </section>

    <section class="dashboard-section">
        <h2>Recently Added Albums</h2>
        <% if (albums && albums.length > 0) { %>
            <div class="card-container">
                <% albums.forEach(album => { %>
                    <div class="card">
                        <% if (album.picture_url) { %>
                            <img class="card-image" src="<%= album.picture_url %>" alt="<%= album.album_name %> cover">
                        <% } else { %>
                            <div class="card-image placeholder">No Album Cover</div>
                        <% } %>
                        <div class="card-content">
                            <h3 class="card-title"><%= album.album_name %></h3>
                            <% if (album.artist_name) { %>
                                <p><strong>Artist:</strong> <%= album.artist_name %></p>
                            <% } %>
                            <% if (album.release_date) { %>
                                <p><strong>Release Date:</strong> <%= album.release_date %></p>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="no-albums-message">
                <p>No albums are currently available.</p>
            </div>
        <% } %>
    </section>
</div>